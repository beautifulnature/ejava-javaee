    <dependencies>
        <!-- needed to resolve JavaEE annotations within Javadoc
      -->
      <dependency>
          <groupId>javax.javaee</groupId>
          <artifactId>javaee</artifactId>
          <version>5</version>
          <scope>provided</scope>
      </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin> <!-- generates site documentation -->
                <artifactId>maven-site-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <!--
                <version>2.0-beta-5</version>
                -->
                <configuration>
                    <locales>en</locales>
                </configuration>
            </plugin>

            <plugin> <!-- deploys artifacts to repository -->
                <artifactId>maven-deploy-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <version>2.2.1</version>
                <configuration>
                    <locales>en</locales>
                </configuration>
            </plugin>
            
            <plugin> <!-- used to build source.zip files -->
                <artifactId>maven-assembly-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <version>2.1</version>
                <configuration>
                    <descriptors>
                        <descriptor>${basedir}/assembly.xml</descriptor>
                    </descriptors>                    
                </configuration>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>jxr-maven-plugin</artifactId>
                <groupId>org.codehaus.mojo</groupId>
                <version>2.0-beta-1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jxr</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        
        <extensions><!-- used for scpexe for some platforms -->
        <!--
            <extension> 
                <artifactId>wagon-ssh-external</artifactId>
                <groupId>org.apache.maven.wagon</groupId>
                <version>1.0-beta-1</version>
            </extension>
            -->
        </extensions>
    </build>

    <reporting>
        <plugins>
            <plugin> <!-- generates aggergated javadoc for root project -->
                <artifactId>maven-javadoc-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <version>2.0</version>
                <configuration>
                    <aggregate>true</aggregate>
                    <links>
                        <link>http://java.sun.com/javaee/5/docs/api</link>
                        <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
                    </links>
                </configuration>
            </plugin>

            <plugin> <!-- generates HTML pages for java code -->
                <artifactId>jxr-maven-plugin</artifactId>
                <groupId>org.codehaus.mojo</groupId>
                <version>2.0-beta-1</version>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>

        </plugins>
    </reporting>

    <profiles>
        <profile> <!-- defines our default database -->
            <id>hsqldb</id>
            <activation>
                <property> <!-- use this property to name another db -->
                    <name>!jdbcdb</name>
                </property>
            </activation>
            <properties>
                  <jdbc.driver>org.hsqldb.jdbcDriver</jdbc.driver>
                  <jdbc.url>jdbc:hsqldb:hsql://localhost:9001</jdbc.url>
                  <jdbc.user>sa</jdbc.user>
                  <jdbc.password/>
            </properties>
        </profile>

        <profile> <!-- tells surefire to run JUnit tests with remote debug -->
            <id>debugger</id>
            <activation>
                <property>
                    <name>debugger</name>
                </property>
            </activation>
            <properties>
                <surefire.argLine>-Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=8000 -Xnoagent -Djava.compiler=NONE</surefire.argLine>
            </properties>                                  
        </profile>        

