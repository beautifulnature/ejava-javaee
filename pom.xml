    <build>
        <pluginManagement>
          <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>${maven-site-plugin.version}</version>
                <configuration>
                    <locales>en</locales>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${maven-deploy-plugin.version}</version>
                <configuration>
                    <locales>en</locales>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${maven-javadoc-plugin.version}</version>
            </plugin>
          </plugins>
        </pluginManagement>

        <extensions><!-- used for scpexe for some platforms -->
        <!--
            <extension> 
                <artifactId>wagon-ssh-external</artifactId>
                <groupId>org.apache.maven.wagon</groupId>
                <version>1.0-beta-7</version>
            </extension>
            -->
        </extensions>
    </build>

    <profiles>
        <profile>
            <id>maven2</id>
            <activation> <!-- only maven3 knows what basedir is -->
                <file>
                    <missing>${basedir}</missing>
                </file>
            </activation>
            <properties>
                <maven-site-plugin.version>2.2</maven-site-plugin.version>
            </properties>
            <reporting>
                <plugins>
                    <!-- creates standard reports -->
                    <plugin> 
                        <artifactId>maven-project-info-reports-plugin</artifactId>
                        <groupId>org.apache.maven.plugins</groupId>
                        <version>${maven-project-info-reports-plugin.version}</version>
                    </plugin>

                    <!-- generates test reports -->
                    <plugin> 
                        <artifactId>maven-surefire-report-plugin</artifactId>
                        <groupId>org.apache.maven.plugins</groupId>
                        <version>${maven-surefire-report-plugin}</version>
                        <configuration>
                            <aggregate>false</aggregate>
                        </configuration>
                    </plugin>

                    <!-- generates aggregated javadoc for root project -->
                    <plugin> 
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <groupId>org.apache.maven.plugins</groupId>
                        <version>${maven-javadoc-plugin.version}</version>
                        <configuration>
                            <detectLinks/>
                            <show>private</show>
                            <source>1.6</source>
                            <links>
                                <link>http://download.oracle.com/javaee/6/api/</link>
                                <link>http://download.oracle.com/javase/6/docs/api/</link>
                            </links>
                        </configuration>
                    </plugin>

                    <!-- generates HTML pages for java code -->
                    <plugin> 
                        <artifactId>maven-jxr-plugin</artifactId>
                        <groupId>org.apache.maven.plugins</groupId>
                        <version>${maven-jxr-plugin.version}</version>
                        <configuration>
                            <aggregate>false</aggregate>
                        </configuration>
                    </plugin>
                </plugins>
            </reporting>
        </profile>

        <profile>
            <id>maven3</id>
            <activation> <!-- only maven3 knows what basedir is -->
                <file>
                    <exists>${basedir}</exists>
                </file>
            </activation>
            <properties>
                <maven-site-plugin.version>3.0-beta-3</maven-site-plugin.version>
            </properties>
            <build>
                <plugins>
                    <plugin> 
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-site-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-descriptor</id>
                                <phase>pre-site</phase>
                                <goals>
                                    <goal>attach-descriptor</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <reportPlugins>
                                <!-- creates standard reports -->
                                <plugin> 
                                    <artifactId>maven-project-info-reports-plugin</artifactId>
                                    <groupId>org.apache.maven.plugins</groupId>
                                    <version>${maven-project-info-reports-plugin.version}</version>
                                </plugin>

                                <!-- generates test reports -->
                                <plugin> 
                                    <artifactId>maven-surefire-report-plugin</artifactId>
                                    <groupId>org.apache.maven.plugins</groupId>
                                    <version>${maven-surefire-report-plugin}</version>
                                    <configuration>
                                        <aggregate>false</aggregate>
                                    </configuration>
                                </plugin>

                                <!-- generates aggregated javadoc for root project -->
                                <plugin> 
                                    <artifactId>maven-javadoc-plugin</artifactId>
                                    <groupId>org.apache.maven.plugins</groupId>
                                    <version>${maven-javadoc-plugin.version}</version>
                                    <configuration>
                                        <detectLinks/>
                                        <show>private</show>
                                        <source>1.6</source>
                                        <links>
                                            <link>http://download.oracle.com/javaee/6/api/</link>
                                            <link>http://download.oracle.com/javase/6/docs/api/</link>
                                        </links>
                                    </configuration>
                                </plugin>
                                <plugin>
                                    <groupId>org.codehaus.mojo</groupId>
                                    <artifactId>findbugs-maven-plugin</artifactId>
                                    <version>2.3.1</version>
                                    <configuration>
                                        <xmlOutput>true</xmlOutput>
                                        <effort>Max</effort>
                                    </configuration>
                                </plugin>

                                <!-- generates HTML pages for java code -->
                                <plugin> 
                                    <artifactId>maven-jxr-plugin</artifactId>
                                    <groupId>org.apache.maven.plugins</groupId>
                                    <version>${maven-jxr-plugin.version}</version>
                                    <configuration>
                                        <aggregate>false</aggregate>
                                    </configuration>
                                </plugin>
                            </reportPlugins>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>jboss5</id>
            <properties>
                <jboss.server>ejava-jboss5</jboss.server>
                <jboss-as-server.version>5.1.0.GA</jboss-as-server.version>
                <jboss-as-client.version>5.1.0.GA</jboss-as-client.version>
                <hibernate-entitymanager.version>3.4.0.GA</hibernate-entitymanager.version>
                <slf4j.version>1.5.2</slf4j.version>
                <slf4j-jboss.version>${slf4j.version}</slf4j-jboss.version>
            </properties>                                  
        </profile>        
        <profile>
            <id>jboss6</id>
            <properties>
                <jboss.server>ejava-jboss6</jboss.server>
                <jboss-as-server.version>6.0.0.Final</jboss-as-server.version>
                <jboss-as-client.version>6.0.0.Final</jboss-as-client.version>
                <hibernate-entitymanager.version>3.6.0.Final</hibernate-entitymanager.version>
                <hornetq.version>2.1.2.Final</hornetq.version>
                <netty.version>3.2.1.Final</netty.version>
                <slf4j.version>1.6.1</slf4j.version>
                <slf4j-jboss.version>1.5.6</slf4j-jboss.version>
            </properties>                                  
        </profile>        

        <profile> <!-- tells surefire to run JUnit tests with remote debug -->
            <id>debugger</id>
            <activation>
                <property>
                    <name>debugger</name>
                </property>
            </activation>
            <properties>
                <surefire.argLine>-Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=8000 -Xnoagent -Djava.compiler=NONE</surefire.argLine>
            </properties>                                  
        </profile>        
    </profiles>
</project>
