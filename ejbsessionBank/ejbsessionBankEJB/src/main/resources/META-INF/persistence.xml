<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="ejbsessionbank">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:/ejavaDS</jta-data-source>
        <!-- use the following declaration for jboss5, but not jboss4
        <jar-file>ejbsessionBankImpl.jar</jar-file>
           * jboss5 wants PU .jar file specified; jboss4 locates automatic
           * jboss4 uses the file spec relative to $HOME versus the .ear
           -->
        <properties>
            <property name="hibernate.dialect" 
                value="${hibernate.dialect}"/>
            <property name="hibernate.show_sql" value="false"/>            
            <!-- create is used here for demo project only -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>        
    
</persistence>
