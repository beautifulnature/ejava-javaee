<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="txhotel">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<!-- we can't use ejavaDS because the new EJB3.l1 Timers are 
    	   hard-coded to use DefaultDS and HSQL does not support XA.
        <jta-data-source>java:/ejavaDS</jta-data-source>
    	 -->
        <jta-data-source>java:/DefaultDS</jta-data-source>

        <mapping-file>META-INF/orm.xml</mapping-file>
        <jar-file>txHotelBO-${project.version}.jar</jar-file>

        <properties>
            <property name="hibernate.dialect" 
                value="${hibernate.dialect}"/>
            <property name="hibernate.show_sql" value="false"/>            
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>        
    
</persistence>
