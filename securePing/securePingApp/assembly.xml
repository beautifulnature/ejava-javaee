<assembly>
  <id>sources</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>ejava.javaee.secureping:securePingEJB</include>
        <include>ejava.javaee.secureping:securePingEAR</include>
        <include>ejava.javaee.secureping:securePingWAR</include>
        <include>ejava.javaee.secureping:securePingTest</include>
      </includes>
      <sources>
        <outputDirectory>${artifactId}</outputDirectory>
      </sources>
    </moduleSet>
  </moduleSets>
  <fileSets>
      <fileSet>
          <includes>
              <include>pom.xml</include>
              <include>assembly.xml</include>
          </includes>
          <outputDirectory>${artifactId}</outputDirectory>
      </fileSet>
      <fileSet>
          <directory>src</directory>
          <outputDirectory>${artifactId}</outputDirectory>
      </fileSet>
  </fileSets>
</assembly>
