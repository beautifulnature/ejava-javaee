<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>jndiDemo</artifactId>
        <groupId>ejava.javaee.jndi</groupId>
        <version>3.0.2012.2-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>jndiDemoTest</artifactId>
    <packaging>jar</packaging>
    <name>JNDI Demo Test</name>
    <description>
        This project is used to deploy and test the server-side components
        for the JNDI demo project.
    </description>

    <dependencies>
        <!-- core dependencies -->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- component to test within deployment-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>jndiDemoEJB</artifactId>
            <version>${project.version}</version>
            <type>ejb-client</type>
            <scope>test</scope>
        </dependency>
        
        <!-- package being deployed must be a dependency -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>jndiDemoEAR</artifactId>
            <version>${project.version}</version>
            <type>ear</type>
        </dependency>

        <!-- test dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>    
    </dependencies>

    <build>
        <!-- filter test/resource files for profile-specific valies -->
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <plugins>
            <!-- THE PROFILE-SPECIFIC DEPLOY WILL EXECUTE HERE -->

              <!-- tell it to run, even though we are a pom project -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>${surefire.argLine}</argLine>
                    <systemPropertyVariables>
                          <!-- The JNDI name may reflect the version name
                               when deploying the EAR within a debugging
                               environment. If so, look for the actual name 
                               in the JNDI tree and change the values 
                               to something like one of the following.
                          ejava/examples/jndidemo/AidScheduler/remote 
                          jndiDemoEAR/AidScheduler/remote
                          jndiDemoEAR/BakeScheduler/remote
                          jndiDemoEAR-1.0.20XX.X-SNAPSHOT/BakeScheduler/remote
                          jndiDemoEAR-1.0.20XX.X-SNAPSHOT/AidScheduler/remote
                          -->
                          <jndi.name.aid>ejava/examples/jndidemo/AidScheduler/remote</jndi.name.aid>

                        <!-- This name is provided in the JBoss-specific profiles
                            and is necessary to do it that way since this is an 
                            example of an EJB that took all defaults -->
                            <jndi.name.bake>${jndi.name.bake}</jndi.name.bake>
                    </systemPropertyVariables>
                </configuration>
            </plugin>

        </plugins>      
    </build>

    <profiles>
<profile>
    <id>jboss</id>
    <activation>
        <property> <!-- activate this unless -Dserver present -->
            <name>!server</name>
        </property>
    </activation>
    <properties>
          <java.naming.factory.initial>org.jnp.interfaces.NamingContextFactory
          </java.naming.factory.initial>
          <java.naming.provider.url>jnp://${jboss.host}:1099
          </java.naming.provider.url>
          <java.naming.factory.url.pkgs>org.jboss.naming:org.jnp.interfaces
          </java.naming.factory.url.pkgs>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jboss.jbossas</groupId>
            <artifactId>jboss-as-client</artifactId>
            <type>pom</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <deployer>
                        <type>remote</type>
                        <deployables>
                            <deployable>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>jndiDemoEAR</artifactId>
                                <type>ear</type>
                            </deployable>
                        </deployables>
                    </deployer>
                </configuration>
                <executions>
                    <execution>
                        <id>deploy-component</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>                    
        </plugins>
    </build>
</profile>

<profile>
    <id>jboss5</id>
    <properties>
        <cargo.containerId>jboss51x</cargo.containerId>
        <jndi.name.bake>jndiDemoEAR-${project.version}/BakeScheduler/remote</jndi.name.bake>
    </properties>
</profile>

<profile>
    <id>jboss6</id>
    <properties>
        <cargo.containerId>jboss6x</cargo.containerId>
        <jndi.name.bake>jndiDemoEAR-${project.version}/jndiDemoEJB-${project.version}.jar/BakeScheduler!remote</jndi.name.bake>
    </properties>
</profile>

    </profiles>
</project>
