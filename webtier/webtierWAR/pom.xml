<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>webTier</artifactId>
        <groupId>ejava.javaee.webtier</groupId>
        <version>3.0.2012.2-SNAPSHOT</version>
      <relativePath>..</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>webtierWAR</artifactId>
    <packaging>war</packaging>

    <name>Demo Web Tier</name>
    <description>
      This project provides an example of how to build, assenle, test, and 
      deploy the actual WAR for a project. It depends on external projects
      to supply the business logic and data access tier. This project, however,
      is responsible for having an environment in place suitable for the other
      logical tiers to operate.
    </description>

    <dependencies>
        <!-- this list contains the core implementation dependencies. the
            profile list contains the deployment-specific dependencies 
        -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>        
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <scope>provided</scope>
        </dependency>
        
        <!-- this brings in interfaces, BO, and core business logic -->
        <dependency>
            <groupId>${project.groupId}</groupId>          
            <artifactId>webtierBL</artifactId>
            <version>${project.version}</version>          
            <scope>compile</scope>
        </dependency>
        
        <!-- this brings in a JPA implementation of the DAO -->
        <dependency>
            <groupId>${project.groupId}</groupId>          
            <artifactId>webtierJPA</artifactId>
            <version>${project.version}</version>          
            <scope>compile</scope>
        </dependency>        
    </dependencies>
    
    <build>
        <finalName>webtierWAR</finalName>
    </build>
    
    
    <profiles>
        <profile> <!-- defines our default persistence provider -->
            <id>hibernate</id>
            <activation>
                <property> <!-- use this property to name alt persistence provider -->
                    <name>!jpa</name>
                </property>
            </activation>

            <dependencies>
                <!-- This will also bring in the appropriate JPA API
                     * make it a compile dependency to assure it gets into WAR -->
                <dependency>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate-entitymanager</artifactId>
                    <scope>compile</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>jetty</id>
            <!--
            Jetty does not use log4j by default. Use the following command line options to force 
            Jetty to use log4j and your verbosity settings.

            mvn -Dslf4j=true -Dlog4j.configuration=file:./src/test/resources/log4j.xml jetty:run -Pjetty
            -->
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>  
                        <!--                        
                        <configuration>
                            <webXml>src/main/webapp/WEB-INF/web-jetty.xml</webXml>
                        </configuration>
                        -->
                    </plugin>
                    <plugin>
                        <groupId>org.mortbay.jetty</groupId>
                        <artifactId>maven-jetty-plugin</artifactId>
                        <configuration>
                            <!-- jetty crashes if web.xml not default
                            <webXml>src/main/webapp/WEB-INF/web-jetty.xml</webXml>
                            -->
                            <scanIntervalSeconds>10</scanIntervalSeconds>
                            <connectors>
                                <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                                    <port>9090</port>
                                    <maxIdleTime>60000</maxIdleTime>
                                </connector>
                            </connectors>
                        </configuration>       
                    </plugin>          
                </plugins>
            </build>

            <dependencies>
                <dependency>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                    <scope>compile</scope>
                </dependency>
                <dependency>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                    <scope>compile</scope>
                </dependency>    
                <dependency>
                    <groupId>hsqldb</groupId>
                    <artifactId>hsqldb</artifactId>
                    <scope>compile</scope>
                </dependency>       
                <dependency>
                    <groupId>mysql</groupId>
                    <artifactId>mysql-connector-java</artifactId>
                    <scope>compile</scope>
                </dependency>       
                <dependency>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                    <scope>compile</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
