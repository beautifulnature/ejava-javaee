<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>webTier</artifactId>
    <groupId>ejava.javaee.webtier</groupId>
    <version>1.0.2006.3</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>ejava.javaee.webtier</groupId>
  <artifactId>webtierBL</artifactId>
  <name>Web Tier Business Logic</name>
  <version>1.0.2006.3</version>
  <description>
      This project provides an example of business logic that stands
      between the client/web tier and the data access tier. 
  </description>
  
  <dependencies>
    <!-- core dependencies -->
    <dependency>
      <groupId>javax.javaee</groupId>
      <artifactId>javaee</artifactId>
      <version>5</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>

    <!-- contains the core business objects passed between tiers -->
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>webtierBO</artifactId>
      <version>${pom.version}</version>
    </dependency>

    <!-- interface for DAO implementations -->
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>webtierDA</artifactId>
      <version>${pom.version}</version>
    </dependency>

    <!-- a DAO implementation -->
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>webtierJPA</artifactId>
      <version>${pom.version}</version>
      <scope>test</scope>
    </dependency>

    <!-- core project testing dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.0</version>
      <scope>test</scope>
    </dependency>        
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.13</version>
      <scope>test</scope>
    </dependency>    

    <!-- JBoss-specific testing dependencies -->
    <dependency>
        <groupId>net.sf.ehcache</groupId>
        <artifactId>ehcache</artifactId>
        <version>1.2</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.jboss.ejb3.embedded</groupId>
        <artifactId>hibernate-all</artifactId>
        <version>alpha8_patch2</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.jboss.ejb3.embedded</groupId>
        <artifactId>jboss-ejb3-all</artifactId>
        <version>alpha8_patch2</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.jboss.ejb3.embedded</groupId>
        <artifactId>thirdparty-all</artifactId>
        <version>alpha8_patch2</version>
        <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
          <!-- make sure we are building java5 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>      

          <!-- set test JVM root classpath so persistence framework
              can locate entities during classpath scan -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
                <argLine>${surefire.argLine}</argLine>
                <systemProperties>
                    <property>
                        <name>java.class.path</name>
                        <value>target/classes</value>
                    </property>
                </systemProperties>
            </configuration>
        </plugin>
    </plugins>      
  </build>
</project>
