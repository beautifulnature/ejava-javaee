    <!-- 
        ncic race codes: 
        A - asian or pacific islander
        B - black
        I - amaerican indian or alaskan
        W - white
        U - unknown
        
        nlets eye colors:
        Black, Blue, Brown, Gray, Green, Hazel,
        Maroon, Multicolored, Pink, Unknown
        
        nlets hair colors:
        Bald, Black, Blond, Strawberry Blonde,
        Brown, Gray, Orange, Purple, partially Gray
        Red, Auburn, Sandy, White, Green,
        Pink, Unknown
    -->
    
    
    <xsd:complexType name="PersonsType">
        <xsd:sequence>
            <xsd:element ref="j:Person" 
                         minOccurs="0" 
                         maxOccurs="unbounded"/>
        </xsd:sequence>                
    </xsd:complexType>
    
    <xsd:complexType name="VehicleRegistrationsType">
    <xsd:sequence>
        <xsd:element ref="j:VehicleRegistration" 
                         minOccurs="0" 
                         maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>    
    
    <xsd:element name="dmv">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="people" 
                    type="dmv:PersonsType" 
                    minOccurs="0"/>
                <xsd:element name="vehicleRegistrations" 
                    type="dmv:VehicleRegistrationsType" 
                    minOccurs="0"/>
            </xsd:sequence>
        </xsd:complexType>        
    </xsd:element>    
    
</xs:schema>