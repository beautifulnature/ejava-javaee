<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
    version="1.0">

    <persistence-unit name="eLeagueBO">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>ejava.projects.eleague.bo.Venue</class>
        <class>ejava.projects.eleague.bo.Address</class>
        
        <properties>
            <property name="hibernate.dialect" 
                value="${hibernate.dialect}"/>
            <property name="hibernate.connection.url"
                value="${jdbc.url}"/>
            <property name="hibernate.connection.driver_class" 
                value="${jdbc.driver}"/>
            <property name="hibernate.connection.password" 
                value="${jdbc.password}"/>
            <property name="hibernate.connection.username" 
                value="${jdbc.user}"/>
            <property name="hibernate.show_sql" value="true"/>            
            <!-- uncomment this property to debug SQL issues when
                 getting "Could not execute JDBC batch update"
                 with Hibernate
            -->
            <property name="hibernate.jdbc.batch_size" value="0"/>            
            <!-- uncomment this to permit Hibernate to create the schema
                 this is a great Java-first technique for creating schema
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            -->
        </properties>
    </persistence-unit>        
    
</persistence>
