<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>ejava.javaee.projects.eSport</groupId>
        <artifactId>eSportData</artifactId>
        <version>1.0.2010.2</version>
    </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>ejava.javaee.projects.eSport.eSportData</groupId>
  <artifactId>eLeagueTestEAR</artifactId>
  <packaging>ear</packaging>
  <name>eLeague TestEAR</name>
  <description>
    This project provides a test EAR to wrap and deploy 
    the TestEJB to perform testing on the server side.
  </description>

    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>eLeagueTestEJB</artifactId>
            <version>${pom.version}</version>
            <type>ejb</type>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
    </build>

<profiles>
    <!-- this profiles allow the EAR to be undeployed before it is deleted
        during the clean target. This behavior requires the EAR to be
        present, so it cannot be part of the default behavior. It is
        only activated when -Dundeploy or -Pundeploy is present so that
        normal cleans do not fail.  -->
<profile>
    <id>undeploy</id>
    <activation>
        <property>
            <name>undeploy</name>
            <value>true</value>
        </property>
    </activation>    
    <build>
        <plugins>
        <plugin>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <configuration>
                <container>
                    <containerId>jboss4x</containerId>
                    <type>remote</type>                
                </container>
            </configuration>
            <executions>
                <execution>
                    <id>undeploy-ear</id>
                    <phase>pre-clean</phase>
                    <goals>
                        <goal>undeploy</goal>
                    </goals>
                    <configuration>
                        <configuration>
                            <type>runtime</type>
                            <properties>
                            <cargo.remote.username>${jboss.user}</cargo.remote.username>
                            <cargo.remote.password>${jboss.password}</cargo.remote.password>
                            </properties>
                        </configuration>
                        <deployer>
                            <type>remote</type>
                            <deployables>
                                <deployable>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <type>ear</type>
                                </deployable>
                            </deployables>
                        </deployer>
                    </configuration>
                </execution>
            </executions>
        </plugin>                    
        </plugins>
    </build>
</profile>
    </profiles>
</project>
