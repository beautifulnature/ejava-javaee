<?xml version="1.0"?><project>

    <!-- this parent dependency is only here to pick up site deployment properties
        when being deployed to the web site, It normally would not be needed to 
        compile and test the application.
        -->
    <parent>
        <artifactId>eMarket</artifactId>
        <groupId>ejava.javaee.projects</groupId>
        <version>1.0.2007.1rc2</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>ejava.javaee.projects.eMarket</groupId>
    <artifactId>eSales</artifactId>
    <packaging>pom</packaging>
    <name>eSales</name>
    <version>1.0.2007.1rc2</version>
    <description>
        This project provides the test data, parser and several example artifacts
        for the class project. Students will create a dependency on the
            eSalesTestUtil project and ingest Java obejcts returned from the
            provided parser. You can find an example of how to setup and use the
            parser within the eSalesBLImpl sub-project.
    </description>
    <profiles>
        <profile>
            <id>devel</id>
            <activation>
                <property>
                    <name>devel</name>
                    <value>true</value>
                </property>
            </activation>
            <modules>
                <module>eSalesDTO</module>
                <module>eSalesDataGen</module>
                <module>eSalesTestUtil</module>
                <module>eSalesBO</module>
                <module>eSalesDAO</module>
                <module>eSalesBLImpl</module>
            </modules>
        </profile>
        <profile>
            <id>deploy</id>
            <activation>
                <property>
                    <name>!devel</name>
                </property>
            </activation>
            <modules>
                <module>eSalesDTO</module>
                <module>eSalesTestUtil</module>
                <module>eSalesBO</module>
                <module>eSalesDAO</module>
                <module>eSalesBLImpl</module>
            </modules>
        </profile>
    </profiles>
</project>
