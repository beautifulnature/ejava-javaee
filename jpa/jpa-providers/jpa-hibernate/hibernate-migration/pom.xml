<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ejava.jpa.hibernate.migration</groupId>
    <artifactId>migration-root</artifactId>
    <version>3.0.2013.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Hibernate Migration::Root</name>
    <description>
        This project and its sub-modules demonstrate a gradual migration from legacy 
        hibernate mappings to a modern JPA mapping implementation.
    </description>

    <modules>
        <module>hibernate-model</module>
        <!--
        <module>hibernate-hbm</module>
        <module>hibernate-orm</module>
        -->
        <module>hibernate-jpamix</module>
        <module>hibernate-annotated-model</module>
        <module>hibernate-annotated-session</module>
        <module>hibernate-annotated-session-override</module>
        <module>hibernate-annotated-jpa</module>
    </modules>
    
    <properties>
        <commons-logging.version>1.1.1</commons-logging.version>
        <h2db.version>1.3.168</h2db.version>
        <hsqldb.version>2.2.8</hsqldb.version>
        <junit.version>4.10</junit.version>
        <log4j.version>1.2.13</log4j.version>
        <maven-jar-plugin.version>2.4</maven-jar-plugin.version>
        <hibernate3-maven-plugin.version>3.0</hibernate3-maven-plugin.version>
        <legacy-hibernate3-maven-plugin.version>2.2</legacy-hibernate3-maven-plugin.version>
        <!-- hibernate 3.2.0.ga was released to ibiblio 2007-01-04 
        --> 
        <legacy-hibernate.version>3.2.0.ga</legacy-hibernate.version>

        <annotated-hibernate.version>3.2.0.ga</annotated-hibernate.version>
        <annotated-hibernate-slf4j.version>1.5.8</annotated-hibernate-slf4j.version>

        <!--
        <annotated-override-hibernate.version>3.5.0-Final</annotated-override-hibernate.version>
        -->
        <annotated-override-hibernate.version>3.2.0.ga</annotated-override-hibernate.version>
        <annotated-override-hibernate-slf4j.version>1.5.8</annotated-override-hibernate-slf4j.version>

        <hibernate3-maven-plugin-hibernate.version>3.6.0.Final</hibernate3-maven-plugin-hibernate.version>

        <wagon-ssh-external.version>2.2</wagon-ssh-external.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>${commons-logging.version}</version>
            </dependency>
            <dependency>
                <groupId>com.h2database</groupId>
                <artifactId>h2</artifactId>
                <version>${h2db.version}</version>
            </dependency>
            <dependency>
                <groupId>org.hsqldb</groupId>
                <artifactId>hsqldb</artifactId>
                <version>${hsqldb.version}</version>
            </dependency>       
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
            </dependency>
            <dependency>
                <groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
                <version>${log4j.version}</version>
            </dependency>    
        </dependencies>
    </dependencyManagement>
    
    <build>
        <extensions> <!-- needed for site deploy over scp -->
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh-external</artifactId>
                <version>${wagon-ssh-external.version}</version>
            </extension>
        </extensions>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${maven-jar-plugin.version}</version>
                </plugin>

                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.codehaus.mojo</groupId>
                                        <artifactId>hibernate3-maven-plugin</artifactId>
                                        <versionRange>[3.0,)</versionRange>
                                        <goals>
                                            <goal>run</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore/>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>

            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>docs</id>
            <modules>
                <module>hibernate-migration-docbook</module>
            </modules>
        </profile>

        <profile> <!-- H2 embedded/file-based DB -->
            <id>h2db</id>
            <properties>
                  <jdbc.driver>org.h2.Driver</jdbc.driver>
                  <jdbc.url>jdbc:h2:${basedir}/target/h2db/ejava</jdbc.url>
                  <jdbc.user>sa</jdbc.user>
                  <jdbc.password/>
                  <hibernate.dialect>
                      org.hibernate.dialect.H2Dialect
                  </hibernate.dialect>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>


        <profile> <!-- H2 server-based DB -->
            <id>h2srv</id>
            <properties>
                  <jdbc.driver>org.h2.Driver</jdbc.driver>
                  <jdbc.url>jdbc:h2:tcp://${db.host}:9092/h2db/ejava</jdbc.url>
                  <jdbc.user>sa</jdbc.user>
                  <jdbc.password/>
                  <hibernate.dialect>
                      org.hibernate.dialect.H2Dialect
                  </hibernate.dialect>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>hsqldb</id> <!-- Hypersonic server-based DB -->
            <activation>
                <property>
                    <name>!jdbcdb</name>
                </property>
            </activation>
            <properties>
                  <jdbc.driver>org.hsqldb.jdbcDriver</jdbc.driver>
                  <jdbc.url>jdbc:hsqldb:${basedir}/target/hsqldb/ejava</jdbc.url>
                  <jdbc.user>sa</jdbc.user>
                  <jdbc.password/>
                  <hibernate.dialect>
                      org.hibernate.dialect.HSQLDialect
                  </hibernate.dialect>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.hsqldb</groupId>
                    <artifactId>hsqldb</artifactId>
                    <scope>test</scope>
                </dependency>       
            </dependencies>
        </profile>

        <profile>
            <id>hsqlsrv</id> <!-- Hypersonic server-based DB -->
            <properties>
                  <jdbc.driver>org.hsqldb.jdbcDriver</jdbc.driver>
                  <jdbc.url>jdbc:hsqldb:hsql://${db.host}:9001</jdbc.url>
                  <jdbc.user>sa</jdbc.user>
                  <jdbc.password/>
                  <hibernate.dialect>
                      org.hibernate.dialect.HSQLDialect
                  </hibernate.dialect>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.hsqldb</groupId>
                    <artifactId>hsqldb</artifactId>
                    <scope>test</scope>
                </dependency>       
            </dependencies>
        </profile>

        <profile>
            <id>webdev-deploy</id>
            <distributionManagement>
                <site>
                    <id>webdev.website</id>
                    <name>ejava JHU webdev website</name>
                    <url>scpexe://webdev.apl.jhu.edu/home/jcs/public_html/ejava-javaee</url>
                </site>
                <repository>
                    <id>webdev.repository</id>
                    <name>ejava JHU repository</name>
                    <url>scpexe://webdev.apl.jhu.edu/home/jcs/public_html/maven2</url>
                </repository>
                <snapshotRepository>
                    <id>webdev.snapshot.repo</id>
                    <name>ejava JHU snapshot repository</name>
                    <url>scpexe://webdev.apl.jhu.edu/home/jcs/public_html/maven2-snapshot</url>
                    <uniqueVersion>false</uniqueVersion>
                </snapshotRepository>
            </distributionManagement>
        </profile>
        <profile>
            <id>test-deploy</id>
            <distributionManagement>
                <site>
                    <id>webdev.website</id>
                    <name>ejava JHU webdev website</name>
                    <url>scpexe://webdev.apl.jhu.edu/home/jcs/public_html/test-deploy/ejava-javaee</url>
                </site>
                <repository>
                    <id>webdev.repository</id>
                    <name>ejava JHU repository</name>
                    <url>scpexe://webdev.apl.jhu.edu/home/jcs/public_html/test-deploy/maven2</url>
                </repository>
                <snapshotRepository>
                    <id>webdev.snapshot.repo</id>
                    <name>ejava JHU snapshot repository</name>
                    <url>scpexe://webdev.apl.jhu.edu/home/jcs/public_html/test-deploy/maven2-snapshot</url>
                    <uniqueVersion>false</uniqueVersion>
                </snapshotRepository>
            </distributionManagement>
        </profile>
    </profiles>
</project>
