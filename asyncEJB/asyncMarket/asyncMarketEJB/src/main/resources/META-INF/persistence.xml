<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="asyncMarket">
        <jta-data-source>java:/ejavaDS</jta-data-source>
        <class>ejava.examples.asyncmarket.bo.Person</class>
        <class>ejava.examples.asyncmarket.bo.AuctionItem</class>
        <class>ejava.examples.asyncmarket.bo.Bid</class>
        <class>ejava.examples.asyncmarket.bo.Order</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>        
    
</persistence>
